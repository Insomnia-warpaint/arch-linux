def generate_iotstream_configuration(soft_home_dir, __soft, local_ip, redis_ip, mysql_ip, influxdb_ip,
                                     elasticsearch_ip, rabbitmq_ip, mongodb_ip):
    config_path = __sys__.path.join(soft_home_dir, iot_config_yml)
    config = open(config_path, "w+")
    config.write("log:\n")
    config.write("  level: info\n")
    config.write("  #  path: ./logs\n")
    config.write("  size: 20\n")
    config.write("  backups: 20\n")
    config.write("  panic: ./logs/panic.log\n")
    config.write("#  age: 7\n")
    config.write("#  filename: default\n")
    config.write("\n")
    config.write("\n")
    config.write("application:\n")
    config.write("  name: HDIOT2_DATA\n")
    config.write("  instance_id: TRAFIICER_C1\n")
    config.write("  admin_server:\n")
    config.write("    rest:\n")
    config.write("      addr: :" + iotstream_port + "\n")
    config.write("\n")
    config.write("data:\n")
    config.write("  influx:\n")
    config.write("    url: http://" + influxdb_ip + ":" + influxdb_http_port + "\n")
    config.write("    database: " + influxdb_database + "\n")
    config.write("    user: " + username + "\n")
    config.write("    password: " + password + "\n")
    config.write("  rdbm:\n")
    config.write("    url: root:" + password + "!@tcp(" + mysql_ip + ":" + list_of_mysql_port[0] + ")/" + mysql_database + "?charset=utf8&parseTime=true\n")
    config.write("    prefix: hd_\n")
    config.write("    mode: mysql\n")
    config.write("  elastic:\n")
    config.write("    addr: [ http://" + elasticsearch_ip + ":" + elasticsearch_port + " ]\n")
    config.write("    user: " + elasticsearch_user_name + "\n")
    config.write("    password: " + elasticsearch_user_password + "\n")
    config.write("  redis:\n")
    config.write("    addr: redis://:" + password + "@" + redis_ip + ":" + redis_port + "/9\n")
    config.write("\n")
    config.write("amqp:\n")
    config.write("  rabbitmq:\n")
    config.write("    url: amqp://" + username + ":" + password + "@" + rabbitmq_ip + ":" + rabbitmq_j_port + "\n")
    config.write("\n")
    config.write("input:\n")
    config.write("\n")
    config.write("store:\n")
    config.write("  type: es\n")
    config.write("  database: " + elasticsearch_database + "\n")
    config.write("  pass_unregistered_sensor: false\n")
    config.write("  ################### 危险项目 重启删除 保存数据 ###################\n")
    config.write("  drop_on_start: false\n")
    config.write("#############################################################\n")
    config.write("track:\n")
    config.write("  disable: true\n")
    config.write("  batch: 64\n")
    config.write("\n")
    config.write("mover:\n")
    config.write("  query: true\n")
    config.write("  timeout: 240\n")
    config.write("  refresh: 120\n")
    config.write("\n")
    config.write("output:\n")
    config.write("  disable: false\n")
    config.write("\n")
    config.write("components:\n")
    config.write("  object_model:\n")
    config.write("    disable: false\n")
    config.write("    subscriber:\n")
    config.write("      disable: false\n")
    config.write("      amqp: amqp://" + username + ":" + password + "@" + rabbitmq_ip + ":" + rabbitmq_j_port + "\n")
    config.write("    history_store:\n")
    config.write("      disable: false\n")
    config.write("      database: " + influxdb_database + "\n")
    config.write("      measurement: raw\n")
    config.write("      retention_policy: default\n")
    config.write("      retention_policy_setting: DURATION 0s REPLICATION 1 DEFAULT\n")
    config.write("  communication:\n")
    config.write("    disable: false\n")
    config.write("    subscriber:\n")
    config.write("      disable: false\n")
    config.write("      amqp: amqp://" + username + ":" + password + "@" + rabbitmq_ip + ":" + rabbitmq_j_port + "\n")
    config.write("    history_store:\n")
    config.write("      disable: false\n")
    config.write("      database: " + influxdb_database + "\n")
    config.write("      measurement: rtu_data_chan\n")
    config.write("      retention_policy: communication\n")
    config.write("      retention_policy_setting: DURATION 3650d REPLICATION 1\n")
    config.write("\n")
    config.write("register:\n")
    config.write("  disable: false\n")
    config.write("  eureka:\n")
    config.write("    urls: [ http://hdiot:Hdkj123!@hdiot-eureka.com:" + eureka_port + "/eureka ]\n")
    config.write("\n")
    return config_path


def generate_configuration_for_iot(soft_home_dir, __soft, local_ip):
    config_path = ""
    if __regx__.compile("(eureka|hdiot-eureka)", __regx__.IGNORECASE).search(soft_home_dir):
        return

    elif __regx__.compile("(center|hdiot-center)", __regx__.IGNORECASE).search(soft_home_dir):
        config_path = generate_center_configuration(soft_home_dir, __soft, local_ip, redis_ip, mysql_ip, influxdb_ip,
                                                    elasticsearch_ip, rabbitmq_ip, mongodb_ip)

    elif __regx__.compile("(agent|hdiot-agent)", __regx__.IGNORECASE).search(soft_home_dir):
        config_path = generate_agent_configuration(soft_home_dir, __soft, local_ip, redis_ip, mysql_ip, influxdb_ip,
                                                   elasticsearch_ip,
                                                   rabbitmq_ip, mongodb_ip)

    elif __regx__.compile("(configure|hdiot-configure)", __regx__.IGNORECASE).search(soft_home_dir):
        config_path = generate_configure_configuration(soft_home_dir, __soft, local_ip, redis_ip, mysql_ip, influxdb_ip,
                                                       elasticsearch_ip, rabbitmq_ip, mongodb_ip)

    elif __regx__.compile("(iotstream|hdiot-iotstream)", __regx__.IGNORECASE).search(soft_home_dir):
        config_path = generate_iotstream_configuration(soft_home_dir, __soft, local_ip, redis_ip, mysql_ip, influxdb_ip,
                                                       elasticsearch_ip, rabbitmq_ip, mongodb_ip)

    return config_path


def start_program_for_iot(soft_home_dir, __soft):
    systemd_shell_path = __sys__.path.join(soft_home_dir, __soft)
    command = "cd " + soft_home_dir + " &&  sh " + systemd_shell_path + "-systemd-start.sh"
    __sh__.call(command, shell=True)
    __time__.sleep(10)
    command = "cd " + soft_home_dir + " &&  sh " + systemd_shell_path + "-systemd-stop.sh"
    __sh__.call(command, shell=True)
    __time__.sleep(7)
    command = "systemctl enable " + __soft + ".service"
    __sh__.call(command, shell=True)
    command = "systemctl daemon-reload && systemctl start " + __soft + ".service"
    __sh__.call(command, shell=True)


def pass_firewalld_by_port(list_of_port):
    for port_ in list_of_port:
        command = "firewall-cmd --zone=public --add-port={0}/tcp --permanent > /dev/null 2>&1".format(port_)
        __sh__.call(command, shell=True)
    command = "firewall-cmd --reload  > /dev/null 2>&1"
    __sh__.call(command, shell=True)



def generate_uniwater_configuration(soft_home_dir, __soft):
    uniwater_conf_path = __sys__.path.join(soft_home_dir, uniwater_conf_dir, uniwater_conf)
    config = open(uniwater_conf_path, 'w')
    config.write("[database]\n")
    config.write("mongodb = mongodb://" + username + ":" + password + "@" + mongodb_ip + ":" + mongo_port + "\n")
    config.write("#mongodb.prefix留空，不要配置，否则授权有问题\n")
    config.write("mongodb.prefix =\n")
    config.write("mongodb.db = uniwater\n")
    config.write("\n")
    config.write("[uniwater]\n")
    config.write("tls = false\n")
    config.write("jwt = true\n")
    config.write("#登录密码传输时加密方式\n")
    config.write("login.pwd = rsa\n")
    config.write("#唯一登录校验（默认关闭）\n")
    config.write(";login.check = false\n")
    config.write("cache.enable = true\n")
    config.write("index = index.html\n")
    config.write("\n")
    config.write("[session]\n")
    config.write("#验证session有效性分类，1-前台；2-后台；3-全部；其他-不验证，默认：3-全部\n")
    config.write(";type = 3\n")
    config.write("#session默认有效时间为30分钟，0:不验证\n")
    config.write(";effective = 30\n")
    config.write("#排除接口或关键字，该接口将不刷新session时间，多个用|分割，默认/uniwater/header/event/pop.json\n")
    config.write("exclude = /uniwater/header/event/pop.json\n")
    config.write("\n")
    config.write("[upload]\n")
    config.write("type = mongodb\n")
    config.write("# type = file\n")
    config.write("# dir = ./upload\n")
    config.write("# 不允许上传的文件后缀,多个用\",\"分隔，例如：.html,.dll\n")
    config.write(";file.suffix = .html\n")
    config.write("\n")
    config.write("[logging]\n")
    config.write("level = 2\n")
    config.write("\n")
    config.write("[app]\n")
    config.write("dlmeasure = https://xxx.com\n")
    config.write("secretkey = xxx\n")
    config.write("#自定义的BPM应用编码，默认值BPM，没配置对无法显示BPM工单角标\n")
    config.write("bpm =\n")
    config.write("\n")
    config.write("#同步度量中APP菜单访问记录\n")
    config.write("sync.appmenu = true\n")
    config.write("#凌晨两点同步一次\n")
    config.write("appmenu.spec = 0 0 2 * * ?\n")
    config.write("#两个服务器系统时间时差容错,默认5分钟\n")
    config.write("appmenu.diff = 300\n")
    config.write("\n")
    config.write("#短信配置\n")
    config.write("[notification]\n")
    config.write(";sms.type =\n")
    config.write(";ihuyi.account =\n")
    config.write(";ihuyi.password =\n")
    config.write("\n")
    config.write("#能力支持平台\n")
    config.write("[dlmeasure]\n")
    config.write("server_url = http://xxxx:xxxx\n")
    config.write("client_id = UNIWATER\n")
    config.write("client_secret = 6dbda366\n")
    config.write("\n")
    config.write("#天气是否启用(默认启用）\n")
    config.write(";weather = true\n")
    config.write("#同步天气\n")
    config.write("weather.enable = false\n")
    config.write("weather.spec = 0 0 */6 * * ?\n")
    config.write("\n")
    config.write("[dingding]\n")
    config.write("# 钉钉里bpm工单消息跳转链接，如果为空，消息将以文本的方式发送\n")
    config.write("bpm.url =\n")
    config.write("# 钉钉bpm工单消息中图片地址，如果为空，将显示钉钉默认图片\n")
    config.write("bpm.pic =\n")
    config.write("\n")
    config.write("#钉钉授权相关配置\n")
    config.write(";agentid = \n")
    config.write(";appkey = \n")
    config.write(";appsecret = \n")
    config.write("\n")
    config.write("#同步钉钉作业相关配置\n")
    config.write("#是否启用作业，默认：true（启用）\n")
    config.write(";isEnable = true\n")
    config.write("#业务同步时间区间间隔（begin和end自动计算的时差），单位：秒，默认：86400（1天），最大1天\n")
    config.write(";sync.interval = 86400\n")
    config.write("#作业同步频率，默认：0 0 2 * * ?（凌晨2点同步一次）\n")
    config.write(";sync.spec = 0 0 2 * * ?\n")
    config.write("#作业同步时间修正，向前多获取n秒的数据，单位：秒，默认：300（5分钟）\n")
    config.write(";sync.correct = 300\n")
    config.write("#注意：同步频率要与同步时间间隔相对应，否则会导致数据丢失\n")
    config.write("\n")
    config.write("[rabbitmq]\n")
    config.write("enable = true\n")
    config.write("url = amqp://" + username + ":" + password + "@" + rabbitmq_ip + ":" + rabbitmq_j_port + "\n")
    config.write("#连接状态检测时间间隔，单位：秒，默认：10秒\n")
    config.write(";ckconntime = 10\n")
    config.write("#重新连接时间间隔，单位：秒，默认：5秒\n")
    config.write(";reconntime = 5\n")
    config.write("\n")
    config.write("#消息发送定时任务\n")
    config.write("[message]\n")
    config.write("enable = false\n")
    config.write("spec = 0 */1 * * * ?\n")
    config.write("\n")
    config.write("[third_login]\n")
    config.write("#浪潮通行证\n")
    config.write(";inspur.enable = true\n")
    config.write(";inspur.host =\n")
    config.write(";inspur.redirectUri =\n")
    config.write(";inspur.clientId =\n")
    config.write(";inspur.clientSecret =\n")
    config.close()

    return uniwater_conf_path



def generate_configuration_for_uniplatform(soft_home_dir, __soft):

    config_path = ""
    if __regx__.compile("(uniwater)", __regx__.IGNORECASE).search(soft_home_dir):
        config_path = generate_uniwater_configuration(soft_home_dir, __soft)

    elif __regx__.compile("(bpm)", __regx__.IGNORECASE).search(soft_home_dir):
        return config_path

    return config_path



def generate_uniwater_service(soft_home_dir, user, config_path, systemd_service_file_path, systemd_start_sh_path,
                                  systemd_stop_sh_path, systemd_restart_sh_path, pid_file_path,
                                  systemd_service_dir, systemd_service_file, exec_file_path):
    systemd_sh = open(systemd_start_sh_path, 'w')
    systemd_sh.write("#!/usr/bin/bash\n")
    systemd_sh.write("cd " + soft_home_dir + "\n")
    systemd_sh.write("nohup ./uniwater &\n")
    systemd_sh.write("PID=$!\n")
    systemd_sh.write("echo $PID > " + pid_file_path)
    systemd_sh.close()

    systemd_sh = open(systemd_restart_sh_path, 'w')
    systemd_sh.write("#!/usr/bin/bash\n")
    systemd_sh.write("source " + systemd_stop_sh_path + " && source " + systemd_start_sh_path)
    systemd_sh.close()

    systemd_sh = open(systemd_stop_sh_path, 'w')
    systemd_sh.write("#!/usr/bin/bash\n")
    systemd_sh.write("cd " + soft_home_dir + "\n")
    systemd_sh.write("kill -9 `cat " + pid_file_path + "`")
    systemd_sh.close()

    service = open(systemd_service_file_path, 'w')
    service.write("[Unit]\n")
    service.write("Description=" + user + "-service\n")
    service.write("After=network.target\n")
    service.write("\n")
    service.write("[Service]\n")
    service.write("User=root\n")
    service.write("Group=root\n")
    service.write("Type=forking\n")
    service.write("ExecStart=" + systemd_start_sh_path + "\n")
    service.write("ExecStop=" + systemd_stop_sh_path + "\n")
    service.write("ExecReload=" + systemd_restart_sh_path + "\n")
    service.write("PIDFile=" + pid_file_path + "\n")
    service.write("\n")
    service.write("[Install]\n")
    service.write("WantedBy=multi-user.target\n")
    service.write("Alias=" + systemd_service_file + "\n")
    service.close()
    __sh_util__.copy(systemd_service_file_path, systemd_service_dir)

    __time__.sleep(3)
    command = "chmod +x {0} {1} {2} {3} {4}".format(systemd_start_sh_path, systemd_stop_sh_path,
                                                systemd_restart_sh_path, systemd_service_file_path, exec_file_path)
    __sh__.call(command, shell=True)
    command = "firewall-cmd --zone=public --add-port={0}/tcp --permanent  > /dev/null 2>&1".format(uniwater_port)
    __sh__.call(command, shell=True)
    command = "firewall-cmd --reload  > /dev/null 2>&1"
    __sh__.call(command, shell=True)



def generate_service_for_uniplatfrom(soft_home_dir, user, config_path):
    systemd_service_dir = "/usr/lib/systemd/system"
    systemd_service_file = user + ".service"
    systemd_service_file_path = __sys__.path.join(soft_home_dir, systemd_service_file)
    systemd_start_sh_file = user + "-systemd-start.sh"
    systemd_start_sh_path = __sys__.path.join(soft_home_dir, systemd_start_sh_file)
    systemd_restart_sh_file = user + "-systemd-restart.sh"
    systemd_restart_sh_path = __sys__.path.join(soft_home_dir, systemd_restart_sh_file)
    systemd_stop_sh_file = user + "-systemd-stop.sh"
    systemd_stop_sh_path = __sys__.path.join(soft_home_dir, systemd_stop_sh_file)
    pid_file = user + ".pid"
    pid_file_path = __sys__.path.join(soft_home_dir, pid_file)
    exec_file_path = __sys__.path.join(soft_home_dir, user)
    if __regx__.compile("(uniwater)", __regx__.IGNORECASE).search(soft_home_dir):
        generate_uniwater_service(soft_home_dir, user, config_path, systemd_service_file_path, systemd_start_sh_path,
                                  systemd_stop_sh_path, systemd_restart_sh_path, pid_file_path,
                                  systemd_service_dir, systemd_service_file, exec_file_path)



def  start_program_for_uniplatfrom(soft_home_dir, __soft):
    start_program_for_iot(soft_home_dir, __soft)



def install(__soft, __pkg_type):
    command = "systemctl enable firewalld > /dev/null 2>&1  && systemctl start firewalld > /dev/null 2>&1"
    __sh__.call(command, shell=True)
    __list_of_pkg_path = []
    __soft_name = __soft
    for __list_of_pkg_path in get_list_of_soft_path():
        if __pkg_type == "tar.gz|tar.xz":
            if __regx__.compile("%s" % __soft, __regx__.IGNORECASE).search(__list_of_pkg_path):
                soft_home_dir = extractive_pkg(__list_of_pkg_path, __soft)
                if soft_home_dir is None:
                    print("soft has be installed, please try others...")
                    return
                __compile__(soft_home_dir, __soft)
                config_path = generate_configuration_for_env(soft_home_dir, __soft)
                generate_service_for_env(soft_home_dir, __soft, config_path)
                start_program_for_env(soft_home_dir, __soft)
        else:
            if __regx__.compile("(eureka|agent|configure|iotstream|center|web)", __regx__.IGNORECASE).search(__soft):
                host_name_of_filling(local_ip)
                hdiot_home_path = __sys__.path.join(install_dir, hdiot_home)
                if not __sys__.path.exists(hdiot_home_path):
                    __sys__.mkdir(hdiot_home_path)

                if not __regx__.compile("^hdiot-", __regx__.IGNORECASE).search(__soft):
                    __soft = "hdiot-" + __soft

                soft_home_dir = __sys__.path.join(hdiot_home_path, __soft)

                if not __sys__.path.exists(soft_home_dir):
                    __sys__.mkdir(soft_home_dir)

            if __pkg_type == "jar" or __pkg_type == "executable":
                if __regx__.compile("{0}|{1}".format(__soft, __soft_name), __regx__.IGNORECASE).search(
                        __list_of_pkg_path):
                    jar_file_name = __list_of_pkg_path.split('/')[len(__list_of_pkg_path.split('/')) - 1]
                    __sh_util__.copy(__list_of_pkg_path, soft_home_dir)
                    config_path = generate_configuration_for_iot(soft_home_dir, __soft, local_ip)
                    generate_service_for_iot(soft_home_dir, __soft, config_path, jar_file_name)
                    start_program_for_iot(soft_home_dir, __soft)
            elif __pkg_type == "directory":
                if __regx__.compile("%s" % __soft_name, __regx__.IGNORECASE).search(__list_of_pkg_path):
                    command = "cp -R " + __list_of_pkg_path + "/* " + soft_home_dir
                    __sh__.call(command, shell=True)
            elif __pkg_type == "uni_platform":
                soft_home_dir = __sys__.path.join(install_dir, __soft)
                if not __sys__.path.exists(soft_home_dir):
                    __sys__.mkdir(soft_home_dir)
                if __regx__.compile("%s" % __soft_name, __regx__.IGNORECASE).search(__list_of_pkg_path):
                    command = "cp -R " + __list_of_pkg_path + "/* " + soft_home_dir
                    __sh__.call(command, shell=True)
                    config_path = generate_configuration_for_uniplatform(soft_home_dir, __soft)
                    generate_service_for_uniplatfrom(soft_home_dir, __soft, config_path)
                    start_program_for_uniplatfrom(soft_home_dir, __soft)


__pkg_type_list = ["jar", "executable", "directory", "tar.gz|tar.xz", "uni_platform"]

